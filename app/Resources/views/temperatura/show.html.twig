{% extends 'base.html.twig' %}

{% block body %}
    <h1>Temperatura</h1>

    <table>
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if temperatura.created %}{{ temperatura.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sensor</th>
                <td>{{ temperatura.sensor }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ temperatura.valor }}</td>
            </tr>
    </table>

    <ul>
        <li>
            <a href="{{ path('temperatura_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('temperatura_edit', { 'id': temperatura.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
